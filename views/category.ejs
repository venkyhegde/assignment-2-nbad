<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= data.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href='/stylesheets/style.css'/>
    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/category-style.css"/>
</head>

<body>
<div class="wrapper">


    <div class="header-wrapper">
        <% include ./partials/header.ejs %>
    </div>
    <div class="user-nav-wrapper">
        <% include ./partials/user-navigation.ejs %>
    </div>
    <div class="nav-side-wrapper">
        <% include ./partials/site-navigation.ejs %>
    </div>
    <div class="main-cont-wrapper">
        <div class="main-content">
            <% include ./partials/breadcrum.ejs %>
    <div>
        <%
        console.log("Categories:"+data.categories);
        for(var i=0; i< data.categories.length; i++){ %>
            <table class="cat-table">
                <thead>

                    <tr>
                        <th class="cat-heading"><%= data.categories[i] %></th>
                    </tr>
                </thead>
                <tbody>
                    <%
                    for(var j=0; j< data.items.length;j++){
                        if(data.categories[i] === data.items[j].catalogCategory){ %>
                        <tr>
                            <td class="cat-items"><a href="/categories/item/<%= data.items[j].itemCode %>"><%= data.items[j].itemName %></a></td>
                        </tr>
                       <% }
                    }
                     %>


                </tbody>

            </table>
            <% }%>
    </div>
        </div>
    </div>
    <div class="footer-wrapper">
        <% include ./partials/footer.ejs %>
    </div>
</div>
</body>
</html>